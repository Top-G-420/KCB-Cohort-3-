CREATE TABLE edu_institute.students (
    student_id INT PRIMARY KEY,
    name VARCHAR(50),
    age INT,
    gender CHAR(1),
    enrollment_date DATE,
    program VARCHAR(50)  
);

INSERT INTO edu_institute.students (student_id, name, age, gender, enrollment_date, program)
VALUES 
    (1, 'Alice Johnson', 22, 'F', '2024-09-01', 'Computer Science'),
    (2, 'Brian Smith', 25, 'M', '2023-01-15', 'Data Science'),
    (3, 'Chloe Zhang', 20, 'F', '2025-02-10', 'Business Administration'),
    (4, 'David Lee', 23, 'M', '2024-06-20', 'Cybersecurity'),
    (5, 'Emma Garcia', 21, 'F', '2025-01-05', 'Artificial Intelligence');

SELECT * FROM edu_institute.students WHERE program = 'Data Science';

SELECT COUNT(*) AS "Total Students" FROM edu_institute.students;

SELECT CURRENT_DATE AS "Today's Date";

SELECT name AS "Student Name", enrollment_date FROM edu_institute.students;

SELECT program, COUNT(*) AS "Number of Students" FROM edu_institute.students GROUP BY program ORDER BY COUNT(*) DESC;

SELECT name, age FROM edu_institute.students WHERE age = (SELECT MIN(age) FROM edu_institute.students);
