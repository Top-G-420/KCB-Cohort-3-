CREATE DATABASE edu_institute;

USE edu_institute;

CREATE TABLE students (
    student_id INT PRIMARY KEY,
    name VARCHAR(50),
    age INT,
    gender CHAR(1),
    enrollment_date DATE,
    program VARCHAR(50)
);


INSERT INTO students (student_id, name, age, gender, enrollment_date, program) VALUES
(1, 'Aisha Mwangi', 20, 'F', '2024-09-01', 'Data Science'), 
(2, 'John Kamau', 22, 'M', '2023-01-15', 'Computer Science'), 
(3, 'Priya Patel', 19, 'F', '2024-03-10', 'Engineering'), 
(4, 'David Otieno', 21, 'M', '2025-02-01', 'Business Analytics'), 
(5, 'Grace Wambui', 23, 'F', '2023-06-20', 'Artificial Intelligence'); 

-- all columns for all students in "Data Science" 
SELECT * FROM students WHERE program = 'Data Science';

-- total number of students
SELECT COUNT(*) AS Total_Students FROM students;

-- display the current date
SELECT CURRENT_DATE() AS Todays_Date;

--  select the student names and their enrolment dates
SELECT UPPER(name) AS name, enrollment_date FROM students;

-- count the number of students in each program
FROM students GROUP BY program ORDER BY Number_of_Students DESC;

-- the youngest student's name and age.
SELECT name, age FROM students WHERE age = (SELECT MIN(age) FROM students);
